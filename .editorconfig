##########################################
# Naming conventions (Виправлено та спрощено)
# Усі правила встановлені на рівень 'error'.
##########################################

[*.{cs,vb}]

## Naming styles
dotnet_naming_style.pascal_case_style.capitalization = pascal_case
dotnet_naming_style.camel_case_style.capitalization = camel_case
dotnet_naming_style.interface_style.capitalization = pascal_case
dotnet_naming_style.interface_style.required_prefix = I
dotnet_naming_style.type_parameter_style.capitalization = pascal_case
dotnet_naming_style.type_parameter_style.required_prefix = T
dotnet_naming_style._camelCase.capitalization = camel_case
dotnet_naming_style._camelCase.required_prefix = _


## Rules

# 1. Private Fields (Instance/Static non-const) - _camelCase (SA1306)
dotnet_naming_symbols.private_field_symbol.applicable_kinds = field
dotnet_naming_symbols.private_field_symbol.applicable_accessibilities = private
dotnet_naming_rule.private_field_naming.symbols = private_field_symbol
dotnet_naming_rule.private_field_naming.style = _camelCase
dotnet_naming_rule.private_field_naming.severity = error

# 2. ALL Constant Fields (SA1303) - PascalCase
dotnet_naming_symbols.const_field_symbol.applicable_kinds = field
dotnet_naming_symbols.const_field_symbol.required_modifiers = const
dotnet_naming_rule.const_field_naming.symbols = const_field_symbol
dotnet_naming_rule.const_field_naming.style = pascal_case_style
dotnet_naming_rule.const_field_naming.severity = error

# 3. Public/Protected/Internal Static Readonly Fields (SA1311) - PascalCase
dotnet_naming_symbols.static_readonly_field_symbol.applicable_kinds = field
dotnet_naming_symbols.static_readonly_field_symbol.applicable_accessibilities = public, internal, protected, protected_internal, private_protected
dotnet_naming_symbols.static_readonly_field_symbol.required_modifiers = static, readonly
dotnet_naming_rule.static_readonly_field_naming.symbols = static_readonly_field_symbol
dotnet_naming_rule.static_readonly_field_naming.style = s_pascal_case_style
dotnet_naming_rule.static_readonly_field_naming.severity = error

dotnet_naming_symbols.static_mutable_field_symbol.applicable_kinds = field
dotnet_naming_symbols.static_mutable_field_symbol.applicable_accessibilities = public, internal, protected, protected_internal, private_protected
dotnet_naming_symbols.static_mutable_field_symbol.required_modifiers = static
dotnet_naming_symbols.static_mutable_field_symbol.excluded_modifiers = readonly, const
dotnet_naming_rule.static_mutable_field_naming.symbols = static_mutable_field_symbol
dotnet_naming_rule.static_mutable_field_naming.style = s_pascal_case_style # ЗАСТОСУВАННЯ
dotnet_naming_rule.static_mutable_field_naming.severity = error

# 4. Classes, Structs, Properties, Methods, Non-Private Mutable Fields, etc. (PascalCase)
# Це правило універсально охоплює всі інші члени, включаючи захищені поля-змінні та публічні методи/властивості.
dotnet_naming_symbols.public_members_symbol.applicable_kinds = class, struct, enum, property, method, local_function, event, namespace, delegate, field
dotnet_naming_symbols.public_members_symbol.applicable_accessibilities = public, internal, protected, protected_internal, private_protected
dotnet_naming_rule.public_members_naming.symbols = public_members_symbol
dotnet_naming_rule.public_members_naming.style = pascal_case_style
dotnet_naming_rule.public_members_naming.severity = error

# 5. Interfaces (IPascalCase)
dotnet_naming_symbols.interface_symbol.applicable_kinds = interface
dotnet_naming_rule.interface_naming.symbols = interface_symbol
dotnet_naming_rule.interface_naming.style = interface_style
dotnet_naming_rule.interface_naming.severity = error

# 6. Type Parameters (TPascalCase)
dotnet_naming_symbols.type_parameter_symbol.applicable_kinds = type_parameter
dotnet_naming_rule.type_parameter_naming.symbols = type_parameter_symbol
dotnet_naming_rule.type_parameter_naming.style = type_parameter_style
dotnet_naming_rule.type_parameter_naming.severity = error

# 7. Parameters (camelCase)
dotnet_naming_symbols.parameter_symbol.applicable_kinds = parameter
dotnet_naming_rule.parameter_naming.symbols = parameter_symbol
dotnet_naming_rule.parameter_naming.style = camel_case_style
dotnet_naming_rule.parameter_naming.severity = error

# 8. Local Variables (camelCase)
dotnet_naming_symbols.local_symbol.applicable_kinds = local
dotnet_naming_rule.local_naming.symbols = local_symbol
dotnet_naming_rule.local_naming.style = camel_case_style
dotnet_naming_rule.local_naming.severity = error

# 9. s_PascalCase style for static fields
dotnet_naming_style.s_pascal_case_style.capitalization = pascal_case
dotnet_naming_style.s_pascal_case_style.required_prefix = s_